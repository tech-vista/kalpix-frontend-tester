# Nakama Server Configuration
# Copy this file to .env and update with your Railway URLs

# Railway Production (replace with your actual Railway URL)
# For standard HTTPS (port 443), leave port as 443 or empty
REACT_APP_NAKAMA_HOST=kalpix-backend-production.up.railway.app
REACT_APP_NAKAMA_PORT=443
REACT_APP_NAKAMA_USE_SSL=true
REACT_APP_NAKAMA_SERVER_KEY=defaultkey

# Local Development (uncomment to use local server)
# REACT_APP_NAKAMA_HOST=localhost
# REACT_APP_NAKAMA_PORT=7350
# REACT_APP_NAKAMA_USE_SSL=false
# REACT_APP_NAKAMA_SERVER_KEY=defaultkey

# Firebase Configuration (optional - for Firebase auth)
REACT_APP_FIREBASE_API_KEY=your_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id

